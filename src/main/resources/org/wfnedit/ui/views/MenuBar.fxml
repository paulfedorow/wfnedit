<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>

<MenuBar xmlns:fx="http://javafx.com/fxml"
         useSystemMenuBar="true"
         fx:controller="org.wfnedit.ui.views.MenuBar">
    <Menu text="File">
        <MenuItem text="Open" accelerator="Shortcut+O" onAction="#onOpen" />
        <MenuItem text="Save" accelerator="Shortcut+S" onAction="#onSave" />
        <MenuItem text="Save as" accelerator="Shortcut+Shift+S" onAction="#onSaveAs" />
        <MenuItem text="Quit" accelerator="Shortcut+Q" onAction="#onQuit" />
    </Menu>
    <Menu text="Edit">
        <MenuItem text="Delete" accelerator="Delete" onAction="#onDelete" />
        <MenuItem text="Reset marking" accelerator="Shortcut+R" onAction="#onResetMarking" />
    </Menu>
</MenuBar>

